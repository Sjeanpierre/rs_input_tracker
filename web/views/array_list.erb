<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Array List</title>
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="/css/lib/html5bp.css">
  <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
  <link rel="stylesheet" href="/css/lib/dt-bootstrap.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="js/lib/modernizr-2.5.3.js"></script>
</head>
<body>
<div class="container">
  <h1>Arrays List: <%= account[:name] %></h1>
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active"><a href="/accounts/<%= account[:id] %>/"><%= account[:name] %></a></li>
  </ol>
  <table class="table table-striped table-bordered table-hover list-table">
    <thead>
	    <tr>
	      <th>Array ID</th>
	      <th>Array Name</th>
		    <th>Rightscale Link</th>
	    </tr>
    </thead>
    <tbody>
    <% arrays.each do |array| %>
      <tr>
        <td><a href="./arrays/<%= array.array_id %>/"><%= array.array_id %></a></td>
        <td> <%= array.array_name %></td>
	      <td><a target="_blank" href="https://my.rightscale.com/acct/<%= account[:id] %>/server_arrays/<%= array.array_id %>">¯\_(ツ)_/¯</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
<!-- /container -->

<script src="/js/lib/jquery-1.7.1.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script src="/js/lib/datatables.js"></script>
<script src="/js/lib/dtBootstrap.js"></script>
<script src="/app.js"></script>
</body>
</html>
